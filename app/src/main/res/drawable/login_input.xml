<?xml version="1.0" encoding="utf-8"?>
<!-- 灰色边框线 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <corners android:radius="20dp"/>
            <solid android:color="#DADADD"/>

        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <corners android:radius="20dp"/>
            <solid android:color="#ffffff"/>
        </shape>
    </item>

</layer-list>