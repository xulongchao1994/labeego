<?xml version="1.0" encoding="utf-8"?>
<!-- 灰色边框线 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#ffffff"/>
            <corners android:radius="5dp"/>
            <padding
                android:bottom="2dp"
                android:left="8dp"
                android:right="8dp"
                android:top="2dp"/>
        </shape>
    </item>

</layer-list>