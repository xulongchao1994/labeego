<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/adapter_theraise_view_add"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFEFF4"/>

    <LinearLayout
        android:id="@+id/adapter_theraise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/adapter_theraise_view_add">

        <TextView
            android:id="@+id/adapter_theraise_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/adapter_theraise_ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/adapter_theraise_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/adapter_theraise_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/adapter_theraise_title"/>

    <LinearLayout
        android:id="@+id/adapter_theraise_zong"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/adapter_theraise_recycler">


        <TextView
            android:id="@+id/adapter_theraise_goodsnumber_zong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/adapter_allorder_orderzeng_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_theraise_orderzeng"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/userorder_text_color"
                android:textSize="12sp"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/fengbi_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textColor="@color/userorder_text_color"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/adapter_theraise_pay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/adapter_theraise_zong">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rules"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/adapter_theraise_orderpay"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#009688"
                android:text="确认付款"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFEFF4"
        app:layout_constraintTop_toBottomOf="@id/adapter_theraise_pay_layout"/>
</android.support.constraint.ConstraintLayout>