<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/weixin_logo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/applogo_round" />

    <LinearLayout
        android:id="@+id/weixin_tiaozhuan_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wxapi_newuser"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/newuser_button"
            android:gravity="center"
            android:text="我是新用户"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/wxapi_olduser"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/olduser_button"
            android:gravity="center"
            android:text="我是老用户"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>