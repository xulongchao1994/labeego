<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFF4"
            android:padding="10dp"
            android:text="商品参数"
            android:textColor="@color/black"/>

        <include layout="@layout/view_1dp_h_p_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="编号"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/goodsinfo_info_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/black"/>
        </LinearLayout>

        <include layout="@layout/view_1dp_h_p_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商品编码"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/goodsinfo_info_bianma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/black"/>
        </LinearLayout>

        <include layout="@layout/view_1dp_h_p_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="单位"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/goodsinfo_info_danwei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/black"/>
        </LinearLayout>

        <include layout="@layout/view_1dp_h_p_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="起订量"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/goodsinfo_info_liang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/black"/>
        </LinearLayout>

        <include layout="@layout/view_1dp_h_p_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="起订倍数"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/goodsinfo_info_qidingbeishu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/goods_item_btn_bg_normal"/>

        <WebView
            android:id="@+id/goodsinfo_info_webview"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="match_parent"/>
    </LinearLayout>
</ScrollView>